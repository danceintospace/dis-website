<div class="py-12">
  <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
      <div class="p-6 bg-white border-b border-gray-200">
        <%= form_with model: @blog_post do |form| %>
          <% if form.object.errors.any? %>
            <div>
              <% form.object.errors.full_messages.each do |message| %>
                <div><%= message %></div>
              <% end %>
            </div>
          <% end %>
          <div class="mb-4">
            <%= form.label :title, class: "text-xl text-gray-600"%>
            <%= form.text_field :title, class: "border-2 rounded border-gray-300 p-2 w-full"%>
          </div>
          <div class="mb-4">
            <%= form.label :body, class: "text-xl text-gray-600" %>
            <%= form.text_area :body, class: "border-2 rounded border-gray-500 w-full"%>
          </div>
        <div class="flex p-1">
          <%= form.button class: "bg-customGray text-black px-4 py-2 rounded hover:bg-customBlue hover:text-white ml-4"%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
