<div class="py-12">
  <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
      <div class="p-6 bg-white border-b border-gray-200">
        <%= form_with model: @blog_post do |form| %>
          <% if form.object.errors.any? %>
            <div>
              <% form.object.errors.full_messages.each do |message| %>
                <div><%= message %></div>
              <% end %>
            </div>
          <% end %>
          <div class="mb-4">
            <%= form.label :title, class: "text-xl text-black"%>
            <%= form.text_field :title, class: "border-2 rounded border-gray-300 p-2 w-full"%>
          </div>
          <div class="mb-4">
            <%= form.label :cover_image, class: "text-xl text-black" %>
            <%= image_tag @blog_post.cover_image, class: "w-1/3" if @blog_post.cover_image.present? %>
            <%= form.file_field :cover_image, class: "border-2 rounded border-gray-300 p-2 w-full" %>
          </div>
          <div class="mb-4">
            <%= form.label :content, class: "text-xl text-black" %>
            <%= form.rich_text_area :content, class: "border-2 rounded border-gray-500 w-full", style: "height: 33vh;"%>
          </div>
          <div class="mb-4">
            <%= form.label :published_at, class: "text-xl text-blacks" %>
            <%= form.datetime_select :published_at, include_blank: true %>
          </div>
          <%= form.file_field :cover_image, class: "border-2 rounded border-gray-300 p-2 w-full" %>
        <div class="flex pt-6">
          <%= form.button class: "bg-customGray text-black px-4 py-2 rounded hover:bg-customBlue hover:text-white "%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>