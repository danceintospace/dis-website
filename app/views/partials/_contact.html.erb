<!-- Contact Section -->
<section id="contact" class="py-16 lg:py-20 md:py-16 sm:py-12 px-4 md:px-8 sm:px-6">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold mb-4">Contact Us</h2>
    <div class="mb-4">
      <p class="mb-2">info@danceintospace.org</p>
      <p>Phone: +254 754 483 075</p>
    </div>
    <!-- Responsive Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-4">
      <!-- Google Map -->
      <iframe src="https://www.google.com/maps/embed?pb=!1m13!1m8!1m3!1d4599.008857861218!2d34.344381787942915!3d0.002068545451384367!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zMMKwMDAnMDcuMiJOIDM0wrAyMCc0Mi4zIkU!5e0!3m2!1sen!2ske!4v1742037990712!5m2!1sen!2ske" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
      <!-- Contact Form -->
      <div>
        <div class="max-w-lg mx-auto">
          <form
            id="contactForm"
            action="https://formspree.io/f/mgveyrge"
            method="POST"
            class="px-4 mt-8"
          >
            <div class="mb-4">
              <label>
                Your name:
                <input type="name" name="name" class="px-4 py-2 rounded border w-full">
              </label>
            </div>
            <div class="mb-4">
              <label>
                Your email:
                <input type="email" name="email" class="px-4 py-2 rounded border w-full">
              </label>
            </div>
            <div class="mb-4">
              <label>
                Your message:
                <textarea name="message" class="px-4 py-2 rounded border w-full"></textarea>
              </label>
            </div>
            <button type="submit" class="block mx-auto bg-indigo-900 text-white px-4 py-2 rounded hover:bg-gray-800">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Select the form and add an event listener for submission
  document.getElementById("contactForm").addEventListener("submit", function (event) {
    setTimeout(() => {
      // Clear form fields after submission
      this.reset();
    }, 0); // Ensure it happens after form submission
  });
</script>
