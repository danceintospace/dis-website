<section id="jumbotron" class="mt-0" style="height: 100vh;">
    <!-- Carousel -->
    <div id="jumbotron-carousel" class="carousel slide" data-bs-ride="carousel">
        
        <!-- Indicators/dots -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#jumbotron-carousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#jumbotron-carousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#jumbotron-carousel" data-bs-slide-to="2"></button>
            <button type="button" data-bs-target="#jumbotron-carousel" data-bs-slide-to="3"></button>
        </div>

        <!-- The slideshow/carousel -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="<%= asset_path('Ondiege4.jpg') %>" alt="two dancers on the floor" class="d-block w-100" style="height: 100vh; object-fit: cover;">
                <div class="carousel-caption  bg-black bg-opacity-50">
                    <h2>Add text here</h2>
                    <p>Add short description here</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="<%= asset_path('agwata_show_three.jpg') %>" alt="one dancer sprinkling sand on another" class="d-block w-100" style="height: 100vh; object-fit: cover;">
                <div class="carousel-caption bg-black bg-opacity-50">
                    <h2>Add text here</h2>
                    <p>Add short description here</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="<%= asset_path('duet_nyanam.jpg') %>" alt="two dancers on stage heads touching" class="d-block w-100" style="height: 100vh; object-fit: cover;">
                <div class="carousel-caption bg-black bg-opacity-50">
                    <h2>Add text here</h2>
                    <p>Add short description here</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="<%= asset_path('trio_nyanam.jpg') %>" alt="two dancers on stage heads touching" class="d-block w-100 mt-1" style="height: 100vh; object-fit: cover;">
                <div class="carousel-caption bg-black bg-opacity-50">
                    <h2>Add text here</h2>
                    <p>Add short description here</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls/icons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#jumbotron-carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#jumbotron-carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</section>

<style>
    @media (max-width: 768px) {
        #jumbotron {
            height: 70vh !important;
        }
        #jumbotron-carousel .carousel-item img {
            height: 70vh !important;
            object-fit: cover;
        }
    }
</style>